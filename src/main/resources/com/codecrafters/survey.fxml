<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@main.css"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.codecrafters.SurveyController">
    <center>
        <HBox fx:id="moodSelectionArea" alignment="CENTER" maxHeight="1.7976931348623157E308"
              maxWidth="1.7976931348623157E308" spacing="30.0" BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </opaqueInsets>
            <BorderPane.margin>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
            </BorderPane.margin>
        </HBox>
    </center>
    <top>
        <Label id="question-label" fx:id="moodQuestionLabel" alignment="TOP_CENTER" contentDisplay="CENTER"
               maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@main.css" text="Label"
               textAlignment="CENTER" wrapText="true" BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <BorderPane.margin>
                <Insets left="100.0" right="100.0" top="100.0"/>
            </BorderPane.margin>
            <font>
                <Font name="System Bold" size="48.0"/>
            </font>
        </Label>
    </top>
</BorderPane>
